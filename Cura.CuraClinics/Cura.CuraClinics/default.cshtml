@inherits ViewPage
@{
    ViewBag.Title = "List all Clinics";
}
<div>
    <div>
        <input class="form-control input-lg" id="Name" type="text" placeholder="Type your name">
        <p id="ClinicResult" style="margin-top: 15px;font-size: large"></p>
    </div>
    
</div>
<script>
    $('#Name').keyup(function () {
        var name = $('#Name').val();
        if (name) {
            $.getJSON('/Clinic/' + name)
                .success(function (response) {
                    $('#ClinicResult').html(response.Result);
                });
        } else {
            $('#ClinicResult').html('');
        }
    });
    $('#Clinic').keyup(function () {
        var name = $('#Clinic').val();
        if (name) {
            $.getJSON('/Clinic/' + name)
                .success(function (response) {
                    $('#clincResult').html(response.Result);
                });
        } else {
            $('#clincResult').html('');
        }
    });
</script>
